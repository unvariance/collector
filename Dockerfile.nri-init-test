# Build nri-init and package into a test-friendly image with nsenter

FROM rust:1-alpine AS build
RUN apk add --no-cache musl-dev build-base
WORKDIR /src
COPY Cargo.toml Cargo.lock ./
COPY crates ./crates
RUN rustup target add x86_64-unknown-linux-musl && \
    cargo build -p nri-init --release --locked --target x86_64-unknown-linux-musl --verbose && \
    cp /src/target/x86_64-unknown-linux-musl/release/nri-init /nri-init

FROM ubuntu:24.04
RUN apt-get update && \
    DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends \
      ca-certificates util-linux && \
    rm -rf /var/lib/apt/lists/*
COPY --from=build /nri-init /usr/local/bin/nri-init
ENTRYPOINT ["/usr/local/bin/nri-init"]
